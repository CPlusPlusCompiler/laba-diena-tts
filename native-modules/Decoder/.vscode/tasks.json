    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Decoder",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fPIC", "-g", "Decoder.cpp",
                "-shared", "-o", "../x86/libDecoder.so",
                "-lavformat", "-lavcodec", "-lavutil", "-lswresample", "-lao"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
