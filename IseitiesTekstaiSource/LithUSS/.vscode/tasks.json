{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create output dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "../../bin/Linux_x86/"
            ]
        },
        {
            "label": "build LithUSS",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fPIC",
                "-g",
                "fv2id.cpp",
                "ilgiai.cpp",
                "LithUSS.cpp",
                "raw2wav.cpp",
                "getLUSSErrorMessages.cpp",
                "-shared",
                "-o",
                "../../bin/Linux_x86/libLithUSS.so",

                "-L../../bin/Linux_x86/",
                "-lTextNormalization",
                "-ltranscrLUSS",
                "-lUnitSelection",
                "-lRateChange",
                "-lDecoder"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "create output dir"
            ]
        }
    ]
}